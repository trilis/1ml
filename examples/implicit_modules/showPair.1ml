local import "prelude"

type SHOW = {
    type t
    show : t -> text
}

show [S : SHOW] x = S.show x
print [S : SHOW] x = Text.print (show x ++ "\n")

implicit Show_int = {
    type t = int
    show = primitive "Int.toText"
}

implicit Show_bool = {
    type t = bool
    show x = if x then "true" else "false"
}

implicit Show_pair [S1 : SHOW] [S2 : SHOW] = {
    type t = (S1.t, S2.t)
    show (x, y) = "(" ++ S1.show x ++ "," ++ S2.show y ++ ")"
}

do print (5, true)